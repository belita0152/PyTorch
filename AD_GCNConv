# Library
import os
import pickle

import random
import torch
from torch_geometric.data import Data
from torch_geometric.loader import DataLoader
from torch.nn import Linear
import torch.nn.functional as F
from torch_geometric.nn import GCNConv, global_mean_pool


# Data
dir = os.getcwd()
load_path = os.path.join(dir, 'data_list.pkl')

with open(load_path, 'rb') as f:
    data_list = pickle.load(f)


# Model
random.shuffle(data_list)
train_dataset = data_list[:65]
test_dataset = data_list[65:]

train_loader = DataLoader(train_dataset, batch_size=16, shuffle=True)
test_loader = DataLoader(test_dataset, batch_size=16, shuffle=False)


class GCN(torch.nn.Module):
    def __init__(self, num_node_features, hidden_channels, num_classes):
        super(GCN, self).__init__()
        torch.manual_seed(12345)
        self.conv1 = GCNConv(num_node_features, hidden_channels)
        self.conv2 = GCNConv(hidden_channels, hidden_channels)
        self.conv3 = GCNConv(hidden_channels, hidden_channels)
        self.lin = Linear(hidden_channels, num_classes)

    def forward(self, x, edge_index, batch):
        x = self.conv1(x, edge_index)
        x = x.relu()
        x = self.conv2(x, edge_index)
        x = x.relu()
        x = self.conv3(x, edge_index)

        x = global_mean_pool(x, batch)  

        x = F.dropout(x, p=0.5, training=self.training)
        x = self.lin(x)

        return x


model = GCN(num_node_features=data_list[0].num_node_features, hidden_channels=64, num_classes=3)
optimizer = torch.optim.Adam(model.parameters(), lr=0.01)
criterion = torch.nn.CrossEntropyLoss()


def train():
    model.train()
    for data in train_loader:
        optimizer.zero_grad()
        data.x = data.x.float()
        data.edge_index = data.edge_index.long()
        data.y = data.y.long()
        out = model(data.x, data.edge_index, data.batch)
        loss = criterion(out, data.y)
        loss.backward()
        optimizer.step()
    return loss


def test(loader):
    model.eval()
    correct = 0
    for data in loader:
        data.x = data.x.float()
        data.edge_index = data.edge_index.long()
        data.y = data.y.long()

        out = model(data.x, data.edge_index, data.batch)
        pred = out.argmax(dim=1)
        correct += int((pred == data.y).sum())

    return correct / len(loader.dataset)


total_train_acc = []
total_test_acc = []
for epoch in range(1, 101):
    loss = train()
    train_acc = testf(train_loader)
    test_acc = testf(test_loader)
    print(f'Epoch: {epoch:03d}, Loss: {loss:.4f}, Train Acc: {train_acc:.4f}, Test Acc: {test_acc:.4f}')
    total_train_acc.append(train_acc)
    total_test_acc.append(test_acc)

total_train_acc = sum(total_train_acc) / 100
total_test_acc = sum(total_test_acc) / 100
print(f'Average Train Acc: {total_train_acc:.4f}, Average Test Acc: {total_test_acc:.4f}')
    

